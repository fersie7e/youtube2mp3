#.kv file of main.py file

#: import CheckBox kivy.uix.checkbox
#: import Factory kivy.factory.Factory

# giving colour to label
<CustLabel@Label>:
	color: 0, 0, 0, 1

<SampBoxLayout>:
	orientation: "vertical"
	padding: 10
	spacing: 10

    Image:
        source: "files/sie7e-logo.png"

	CustLabel:
		text: "Youtube to MP3"
		font_size:20
		size_hint: (1, None)
        height: 30

	# creating box layout

    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 30
        width: 60

        # label creation
        CustLabel:
            text: "PlayList"
            text_size: self.size
            halign: 'right'
            valign: 'center'
            size_hint: (.9, None)
            height: 30
            font_size: 20
        CheckBox:
            id: pl
            size_hint: (.1, None)
            height: 30
            color: 0, 0, 0
            on_active: root.checkbox_click(self, self.active)


    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 30
        width: 60

        CustLabel:
            text: "title:"
            text_size: self.size
            halign: 'left'
            valign: 'center'
            size_hint: (.2, None)
            height: 30
            font_size: 20

        TextInput:
            size_hint_x: 1
            id: title
            disabled: True
            size_hint: (.8, None)
            height: 35


    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 30
        width: 60

        CustLabel:
            text: "url:"
            text_size: self.size
            halign: 'left'
            valign: 'center'
            size_hint: (.2, None)
            height: 30
            font_size: 20

        TextInput:
            size_hint_x: 1
            id: url
            size_hint: (.8, None)
            height: 35

    Button:
        size_hint_x: 1
        text: 'Extract mp3'
        on_press: root.extract_mp3()
        size_hint: (1, None)
        height: 40


    BoxLayout:
        orientation: "horizontal"
        size_hint: (1, None)
        height: 80

        CustLabel:
            text: "VIDEO:\n 1. Pegar la dirección del video de Youtube en el cuadro de texto \n 2. Pulsar Extraer mp3"
            text_size: self.size
            halign: 'left'
            valign: 'center'
            size_hint: (.5, None)
            height: 100
            font_size: 12

        CustLabel:
            text: "PLAYLIST:\n 1. Activar el Checkbox PLAYLIST\n 2. Asignar un nombre al titulo (carpeta donde se guardaran las pistas) \n 3. Pegar la dirección de la playlist de Youtube en el cuadro de texto \n 4. Pulsar Extraer mp3"
            text_size: self.size
            halign: 'left'
            valign: 'center'
            size_hint: (.5, None)
            height: 100
            font_size: 12

    CustLabel:
        color: .2, .2, .8, 1
        text: "STATUS: Ready"
        id: status
        text_size: self.size
        halign: 'left'
        valign: 'bottom'
        size_hint: (.5, None)
        height: 20
        font_size: 12

<P>:
    Label:
        text: "Debe introducir un titulo"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

